<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbox" onMouseClicked="#onVboxClick" prefHeight="120.0" prefWidth="380.0" styleClass="input" stylesheets="@ProjectItemCustom.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="protasker.Controller.ProjectItemController">
   <children>
      <HBox prefHeight="76.0" prefWidth="389.0">
         <children>
            <VBox prefHeight="62.0" prefWidth="272.0">
               <HBox.margin>
                  <Insets left="25.0" top="10.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="projectName" prefHeight="28.0" prefWidth="345.0" text="Project's Name">
                     <font>
                        <Font name="Plus Jakarta Sans ExtraBold" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="projectDesrips" text="Task's Decription">
                     <font>
                        <Font name="Plus Jakarta Sans Light" size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="3.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            <ImageView fx:id="projectLeaderAvtPath" fitHeight="55.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../DashBoard/Image/avatar.jpg" />
               </image>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </ImageView>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="360.0">
         <children>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../DashBoard/Image/priority-arrows.png" />
               </image>
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
            </ImageView>
            <Label fx:id="projectPriority" prefHeight="24.0" prefWidth="111.0" text="Medium">
               <font>
                  <Font name="Plus Jakarta Sans Medium" size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <padding>
                  <Insets top="2.0" />
               </padding>
            </Label>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../DashBoard/Image/calendar-check.png" />
               </image>
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </ImageView>
            <Label fx:id="projectTargetDate" text="Date">
               <HBox.margin>
                  <Insets left="10.0" top="2.0" />
               </HBox.margin>
               <font>
                  <Font name="Plus Jakarta Sans Medium" size="15.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
