<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="250.0" prefWidth="650.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="protasker.Controller.NewTaskController">
   <children>
      <TextField prefHeight="40.0" prefWidth="666.0" promptText="Task Title" style="-fx-background-color: transparent;">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font name="Plus Jakarta Sans Medium" size="18.0" />
         </font>
      </TextField>
      <TextArea prefHeight="97.0" prefWidth="626.0" promptText="Add description..." style="-fx-background-color: transparent;">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="5.0" />
         </VBox.margin>
         <font>
            <Font name="Plus Jakarta Sans Medium" size="14.0" />
         </font>
      </TextArea>
      <HBox prefHeight="35.0" prefWidth="630.0">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
         <children>
            <ComboBox fx:id="statusOfTask" prefHeight="26.0" prefWidth="78.0" promptText="Status">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Todo" />
                        <String fx:value="In Progress" />
                        <String fx:value="Done" />
                        <String fx:value="Canceled" />
                        <String fx:value="Duplicate" />
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox prefHeight="26.0" prefWidth="96.0" promptText="Priority" />
            <ComboBox prefHeight="26.0" prefWidth="74.0" promptText="User" />
            <ComboBox prefHeight="26.0" prefWidth="110.0" promptText="Project" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="650.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="29.0" prefWidth="90.0" text="Confirm">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Plus Jakarta Sans Medium" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" prefHeight="29.0" prefWidth="90.0" text="Cancel">
               <font>
                  <Font name="Plus Jakarta Sans Medium" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
